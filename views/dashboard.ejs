	<div class="card col m-auto notification" style="background: #fff829;">
		<h5 class="text-primary text-uppercase pb-3 p-3 font-italic">Notification</h5>
				<% if (user.notifications.length) { -%>
		<div class="list-group">
			<ul class="list-unstyled">
				<% for (var i = 0; i < user.notifications.length; i++) { -%>
				<style>
					.notification li:hover {
						box-shadow: 0px 0px 4px 0px #000;
						transition: .05s;
					}
				</style>
					<li style="
						background: rgba(101, 224, 0, 0.31);
						border-radius: 5px;
						padding: 5px 15px;
						margin-bottom: 10px;
						box-shadow: 0px 0px 5px 1px #000 inset rgba(0, 0, 0, 0.2);
						cursor: pointer;
						color: #225;
					"><%= user.notifications[i] %></li>
				<% } -%>					
			</ul>
		</div>
				<% } else { -%>
					<h3>You have no Notification</h3>
